#!/bin/bash
# see: dh_installdeb(1)
# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

#DEBHELPER#

# function to check if a path is a symlink
function isValidSymlink() {
    if [ -L "$1" ]; then
        return 0
    else
        return 1
    fi
}

# get python version, remove spaces, get Python3.7 or Python3.9, lowercase
PYTHONSTUB=`python3 -V 2>&1 | sed 's/ //g' | grep -oP '(\w+\.\d+)' | tr 'P' 'p'`

# the actual target working directory (this is a workaround so we can support multiple Python versions at build)
TARGET_DIR=/opt/wlanpi-rxg-agent/lib/$PYTHONSTUB/site-packages/wlanpi_rxg_agent

# this is the parent directory which holds our linked working directory
LINK=/opt/wlanpi-rxg-agent/workingdirectory

# this is the path that we need to check if is already a link
TEST_PATH=/opt/wlanpi-rxg-agent/workingdirectory/wlanpi_rxg_agent

CONF_CHANGED=1

# if link doesn't exist, create it
if ! isValidSymlink $TEST_PATH; then
    ln -s $TARGET_DIR $LINK
fi
# TODO: Setup configuration reload here
## if wlanpi_rxg_agent.conf is not a symlink, create symlink.
#WLANPI_CORE=/etc/nginx/sites-enabled/wlanpi_rxg_agent.conf
#if ! isValidSymlink $WLANPI_CORE; then
#    echo "Linking wlanpi_rxg_agent.conf ..."
#    ln -s /etc/wlanpi-rxg-agent/nginx/sites-enabled/wlanpi_rxg_agent.conf $WLANPI_CORE
#    CONF_CHANGED=0
#fi

if [ $CONF_CHANGED -eq 0 ]; then
    echo "Restarting wlanpi-rxg-agent ..."
    deb-systemd-invoke restart wlanpi-rxg-agent.service
fi

exit 0
